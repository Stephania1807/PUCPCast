<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MineGrande">

    <TextView
        android:id="@+id/tituloMineGrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/inter_bold"
        android:text="Titulo episodio"
        android:textColor="#2F2C2C"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageMineGrande"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/descripcionMineGrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registradorTv" />

    <TextView
        android:id="@+id/registradorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Registrador:"
        app:layout_constraintBottom_toBottomOf="@+id/registradorEditMine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registradorEditMine" />

    <TextView
        android:id="@+id/registradorEditMine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toEndOf="@+id/registradorTv"
        app:layout_constraintTop_toBottomOf="@+id/imageMineGrande" />

    <Button
        android:id="@+id/editarMineBtn"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#2F2C2C"
        android:fontFamily="@font/inter_semibold"
        android:text="Editar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionMineGrande" />

    <Button
        android:id="@+id/eliminarMineBtn"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/inter_semibold"
        android:text="Eliminar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/naranja"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editarMineBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editarMineBtn"
        app:layout_constraintTop_toBottomOf="@+id/editarMineBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
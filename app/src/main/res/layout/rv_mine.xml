<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-2dp">

        <ImageView
            android:id="@+id/imageMine"
            android:layout_width="153dp"
            android:layout_height="97dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="TÃ­tulo"
                android:textColor="@color/negro"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/registrador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_bold"
                android:text="Registrador"
                android:textColor="@color/negro65"
                android:textSize="10sp" />

            <Button
                android:id="@+id/verDetalleBtn"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="#2F2C2C"
                android:fontFamily="@font/inter_semibold"
                android:text="Ver"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#D9D9D9"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="-2dp">

                <Button
                    android:id="@+id/editarBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#D9D9D9"
                    android:drawableBottom="@drawable/ic_edit"
                    android:fontFamily="@font/inter_semibold"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#2F2C2C"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/eliminarBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/negro65"
                    android:drawableBottom="@drawable/ic_baseline_delete_24"
                    android:fontFamily="@font/inter_semibold"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/naranja"
                    android:textSize="9sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
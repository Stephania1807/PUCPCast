<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEpisodio">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tituloInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="259dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="32dp"
        android:hint="Titulo"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tituloInputEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="@font/inter"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="13sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descripcionInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="258dp"
        android:layout_height="129dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:hint="Descripcion"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="@+id/tituloInputLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tituloInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/tituloInputLayout"
        app:startIconDrawable="@drawable/ic_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descripcionInputEditText"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="@drawable/bordes_redondos"
            android:fontFamily="@font/inter"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="13sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageMineGrande"
        android:layout_width="233dp"
        android:layout_height="237dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/editarBtn"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#2F2C2C"
        android:fontFamily="@font/inter_semibold"
        android:text="Editar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionInputLayout" />

    <Button
        android:id="@+id/cancelarBtn"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/inter_semibold"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/naranja"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editarBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editarBtn"
        app:layout_constraintTop_toBottomOf="@+id/editarBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>